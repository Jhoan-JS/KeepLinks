<div class="col-md-4 mx-auto p-2">

  <div class="card text-center">
     <div class="card-header">
      <h3>New Link</h3>
    </div>
    <div class="card-body">
      <form action="/links/new-link" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Title"
            id=""
          />
        </div>

        <div class="form-group">
          <input
            type="url"
            name="link"
            class="form-control"
            placeholder="Link"
            id=""
          />
        </div>

        <div class="form-group">
          <textarea name="description" id="" placeholder="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

</div>