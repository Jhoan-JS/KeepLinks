<div class="row">

  <div class="col-md-5 mx-auto p-2">
    <div class="card text-center">

      <div class="card-header">
        <h3>Edit</h3>
      </div>

      <div class="card-body">
        <form action="/links/edit/{{_id}}?_method=PUT" method="post">

          <div class="form-group">
            <input
              type="text"
              name="title"
              class="form-control"
              value="{{title}}"
              placeholder="Title"
              autofocus
              id=""
            />
          </div>

          <div class="form-group">
            <input
              type="url"
              name="url"
              value="{{url}}"
              class="form-control"
              placeholder="Link"
              id=""
            />
          </div>

          <div class="form-group">
            <textarea
              name="description"
              id=""
              placeholder="Description"
              class="form-control"
              value="{{description}}"
            >{{description}}</textarea>
          </div>

          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>